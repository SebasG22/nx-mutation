{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mutation-demo/components": ["libs/components/src/index.ts"],
      "@mutation-demo/components-sample": [
        "libs/components-sample/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
